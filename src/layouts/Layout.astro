---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <div class="nav-container">
        <a href="/" class="site-name">AI Systems Architecture</a>
        <div class="nav-links">
          <a href="/podcast">Podcast</a>
          <a href="/writing">Writing</a>
          <a href="/research">Research</a>
          <a href="/about">About</a>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <p>AI Systems Architecture</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --max-width: 720px;
    --text-color: #1a1a1a;
    --background: #ffffff;
    --border-color: #e5e5e5;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
    background: var(--background);
    color: var(--text-color);
    line-height: 1.6;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  nav {
    border-bottom: 1px solid var(--border-color);
    padding: 1.5rem 2rem;
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .site-name {
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    color: var(--text-color);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--text-color);
    font-size: 0.95rem;
  }

  .nav-links a:hover {
    color: #666;
  }

  main {
    flex: 1;
    max-width: var(--max-width);
    width: 100%;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  footer {
    border-top: 1px solid var(--border-color);
    padding: 2rem;
    text-align: center;
    color: #666;
    font-size: 0.9rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1.2rem;
  }

  ul {
    margin: 1.2rem 0;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  a {
    color: var(--text-color);
  }

  @media (max-width: 640px) {
    .nav-container {
      flex-direction: column;
      align-items: flex-start;
    }

    .nav-links {
      gap: 1.5rem;
    }
  }
</style>
